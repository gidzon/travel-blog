<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>admin dashboard</title>
    <link rel="stylesheet" href="../../public/css/main.css">
    <link rel="stylesheet" href="../../public/css/admin.css">
</head>
<body>
<div class="wrapper">
<aside>
    <div class="navigation">
        <ul id="menu">
            <li><button>Категории</button></li>
            <li><button>Статьи</button></li>
        </ul>
    </div>
</aside>

<div class="categories_dashboard hidden">
    <button id="btn-category">Добавить категорию</button>
    <form action="" method="post" name="category" class="hidden">
        <input type="text" name="name" id="" placeholder="название категории">
        <input type="submit" id="">
    </form>
    {% if categories is empty %}
        <p>Нет категорий</p>
    {% else %}
        <table id="table-category">
            <tr>
                <td>ID</td>
                <td>Категория</td>
                <td>Удаление</td>
                <td>Редактирование</td>
            </tr>
            <tbody id="category_data">
            {% for category in categories %}
                <tr>
                    <td>{{ category.id }}</td>
                    <td>{{ category.name }}</td>
                    <td><button id="category-delete" data-id="{{ category.id }}">удалить</button></td>
                    <td><button id="category-update" data-id="{{ category.id }}">редактировать</button></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% endif %}
</div>
<div class="articles_dashboard show_flex">
    <form action="" method="post" name="article" class="form_update">
        <input type="text" name="title" id="article_tile" placeholder="заголовок">
        <input type="text" name="id_category" id="id_category" placeholder="id категории">
        <textarea name="subcontent" id="subcontent" cols="30" rows="10" placeholder="отрывок статьи"></textarea>
        <textarea name="content" id="content" cols="30" rows="10" placeholder="текст статьи"></textarea>
        <div class="btnSend">
            <input type="submit" name="submit" value="отправить">
        </div>

    </form>
    {% if articles is empty %}
    <p id="not_articles">Нет статьей</p>
{% else %}
    <table id="show_articles">
        <thead>
        <tr>
            <td>ID</td>
            <td>Заголовок</td>
            <td>Отрывок</td>
            <td>Удалить</td>
            <td>Редактировать</td>
        </tr>
        </thead>
        <tbody id="tbarticles">
        {% for article in articles %}
            <tr>
                <td>{{ article.id }}</td>
                <td>{{ article.title }}</td>
                <td>{{ article.subcontent }}</td>
                <td><button id="article-delete" data-id="{{ article.id }}">удалить</button></td>
                <td><button id="article-update" data-id="{{ article.id }}">изменить</button></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% endif %}


</div>
</div>
<script src="../../public/js/admin.js"></script>

</body>
</html>
